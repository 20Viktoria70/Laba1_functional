# Завдання 1. Подвоєння парних чисел
# Написати функцію doubleEven, яка для списку цілих чисел подвоює тільки парні числа, залишаючи непарні без змін. 
# Приклад:doubleEven [1,2,3,4] == [1,4,3,8]

doubleEven :: [Int] -> [Int]
doubleEven xs = [ if x `mod` 2 == 0 then x * 2 else x | x <- xs ]

main :: IO ()
main = do
    putStrLn "Введіть числа через пробіл:"
    input <- getLine
    let nums = map read (words input) :: [Int]
    let result = doubleEven nums
    putStrLn ("Результат подвоєння парних чисел: " ++ show result)
