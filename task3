#Завдання 3. Абсолютні значення
# Написати функцію absList, яка переводить усі числа у списку до їх абсолютних значень.
# Приклад: absList [-3, 5, -7] == [3,5,7]

absList :: [Int] -> [Int]
absList xs = [ abs x | x <- xs ]

main :: IO ()
main = do
    putStrLn "Введіть числа через пробіл:"
    input <- getLine
    let nums = map read (words input) :: [Int]
    let result = absList nums
    putStrLn ("Список абсолютних значень: " ++ show result)
