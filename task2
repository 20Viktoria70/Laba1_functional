# Завдання 2. Сума непарних чисел
# Написати функцію sumOdd, яка обчислює суму всіх непарних чисел у списку.

sumOdd :: [Int] -> Int
sumOdd xs = sum [ x | x <- xs, x `mod` 2 /= 0 ]

main :: IO ()
main = do
    putStrLn "Введіть числа через пробіл:"
    input <- getLine
    let nums = map read (words input) :: [Int]
    let result = sumOdd nums
    putStrLn ("Сума непарних чисел: " ++ show result)
