# Завдання 6. Максимум списку
# Реалізувати функцію myMaximum, яка знаходить найбільший елемент у списку (без використання maximum). 
# Приклад: myMaximum [3,7,2,9,4] == 9

myMaximum :: (Ord a) => [a] -> a
myMaximum [] = error "Список порожній!"
myMaximum [x] = x
myMaximum (x:xs) = let maxTail = myMaximum xs
                    in if x > maxTail then x else maxTail

main :: IO ()
main = do
    putStrLn "Введіть числа через пробіл:"
    input <- getLine
    let nums = map read (words input) :: [Int]
    let maxValue = myMaximum nums
    putStrLn ("Максимальний елемент списку: " ++ show maxValue)
