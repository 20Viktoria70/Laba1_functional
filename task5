# Завдання 5. Рекурсивне перевертання списку
# Реалізувати функцію myReverse, яка рекурсивно перевертає список. Приклад: myReverse [1,2,3] == [3,2,1]

myReverse :: [a] -> [a]
myReverse [] = []
myReverse (x:xs) = myReverse xs ++ [x]

main :: IO ()
main = do
    putStrLn "Введіть числа через пробіл:"
    input <- getLine
    let nums = map read (words input) :: [Int]
    let reversed = myReverse nums
    putStrLn ("Перевернутий список: " ++ show reversed)
