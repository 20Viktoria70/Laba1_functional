# Завдання 8. Числа Фібоначчі
# Рекурсивно реалізувати функцію обчислення n-го числа Фібоначчі.

fib :: Int -> Int
fib 0 = 0
fib 1 = 1
fib n = fib (n-1) + fib (n-2)

main :: IO ()
main = do
    putStrLn "Введіть n (номер числа Фібоначчі):"
    input <- getLine
    let n = read input :: Int
    let result = fib n
    putStrLn ("n-те число Фібоначчі: " ++ show result)
